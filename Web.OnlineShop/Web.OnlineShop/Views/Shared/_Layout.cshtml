<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Assets/Client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="/Assets/Client/js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/move-top.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/easing.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/startstop-slider.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="logo ">
                    <a href="/">
                        <img style="width:40%" src="~/Assets/Client/images/logo-minh-hoang.png" />
                    </a>
                </div>
                @{Html.RenderAction("MenuTop", "Home");}

            </div>
            <div class="header_top">
                

                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>

                <div class="clear"></div>
            </div>
            
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home");}
                <div class="search_box">
                    <form>
                        <input type="text" placeholder="Tìm kiếm sản phẩm" value="Tìm kiếm sản phẩm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit"  placeholder="Tìm kiếm sản phẩm"value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>

            @RenderSection("slide", required: false)
            @RenderSection("product", required: false)
        </div>

        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @{Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

