
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var products = new List<Web.OnlineShop.Entity.Product>();
    if (ViewBag.Products != null)
    {
        products = (List<Web.OnlineShop.Entity.Product>)ViewBag.Products;
    }

}

@section slide{

    <div class="header_slide">
        <div class="header_bottom_left">
            @{Html.RenderAction("ProductCategory", "Product");}
        </div>
        <div class="header_bottom_right" id=" slide">
            <img src="~/Upload/banner.png" style="width:100%;height:100%;display:block" />
        </div>
        <div class="clear"></div>
    </div>
}

<div class="content">
    <div class="section-title-cus mb-20">
        <span class="group-icon">
            <i class="fas fa-door-open"></i>
        </span>
        <h2>Sản phẩm mới</h2>
    </div>
    <div class="section group">
        @if (products.Count() > 0)
        {
            foreach (var item in products)
            {
                var url = "/chi-tiet/" + item.MetaTitle + "-" + item.Id;
                <div class="grid_1_of_4 images_1_of_4 zoom">
                    @if (item.Image != null)
                    {
                        <a href="@url"><img src="@Url.Content(item.Image)" alt="@item.Name" /></a>
                    }
                    <h2 style="font-size:small">@item.Name </h2>
                    <p style="color:blueviolet">@item.ProductCategory.Name</p> 
                    <div class="price-details">
                    </div>
                    <br />
                    <a href="@url" class=" btn btn-success"> Xem chi tiết</a>
                </div>
            }
        }

    </div>
</div>
<style>
    .slide{
        width:600px;
        height:300px;
    }

    .section-title-cus {
        border-top: 3px solid #ed1b24;
        position: relative;
        margin-bottom: 20px;
    }

        .section-title-cus h2 {
            margin: 0;
            text-transform: uppercase;
            color: #fff;
            background-color: #ed1b24;
            font-size: 15px;
            display: inline-block;
            padding-left: 60px;
            padding-right: 20px;
            height: 39px;
            line-height: 39px;
            position: relative;
            font-weight: 500;
        }

            .section-title-cus h2::after {
                content: "";
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 39px 39px 0 0;
                border-color: #ed1b24 transparent transparent;
                position: absolute;
                right: -39px;
                top: 0;
            }

        .section-title-cus .group-icon {
            position: absolute;
            top: -3px;
            left: 0;
            background: #231f20;
            padding: 10px;
            display: inline-block;
            color: #fff;
            width: 39px;
            height: 42px;
            text-align: center;
            line-height: 19px;
            z-index: 1;
        }

    .zoom {
        transition: transform .2s;
    }

        .zoom:hover {
            transform: scale(1.1);
        }

       
</style>
