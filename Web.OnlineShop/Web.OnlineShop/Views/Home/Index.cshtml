
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var products = new List<Web.OnlineShop.Entity.Product>();
    if (ViewBag.Products != null)
    {
        products = (List<Web.OnlineShop.Entity.Product>)ViewBag.Products;
    }
    var contact = (Web.OnlineShop.Entity.Contact)ViewBag.Contact;
    var contents = (List<Web.OnlineShop.Entity.Content>)ViewBag.Contents;
    var feedbacks = (List<Web.OnlineShop.Entity.Feedback>)ViewBag.Feedbacks;
    var i = 0;
    var j = 0;

}
