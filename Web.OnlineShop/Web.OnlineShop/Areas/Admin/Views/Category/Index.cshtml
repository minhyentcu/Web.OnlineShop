@model IEnumerable<Web.OnlineShop.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh mục bài viết
}

<p class=" row">
    <div>
        <a class="btn btn-xs btn-success float-md-right " href="@Url.Action("Create","Category")">Tạo mới</a>
    </div>
</p>
<table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
    <thead>
        <tr>
            <th>
                <p>Danh mục</p>
            </th>

            <th>
                <p>Ngày tạo</p>
            </th>

            <th>
                <p>Ngày sửa</p>
            </th>

            <th>
                <p>Trạng thái</p>
            </th>

            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                <a href="@Url.Action("Edit","Category",new { id=item.Id })"><i class="fas fa-edit" style='font-size:24px'></i></a>
                <a href="@Url.Action("Details","Category",new { id=item.Id })"><i class="fas fa-bars" style='font-size:24px'></i></a>
                <a href="@Url.Action("Delete","Category",new { id=item.Id })"><i class="fas fa-trash-alt" style='font-size:24px'></i></a>
            </td>
        </tr>
    }

</table>

<script>
    $('#dataTable').dataTable({
    });
</script>
