@model IEnumerable<Web.OnlineShop.Entity.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thông tin Phản hồi khách hàng
}

<table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Content)*@

                <textarea type="text" class="form-control" readonly  name="Content" placeholder="" rows="4">@item.Content</textarea>
            </td>
            <td>
                <a href="@Url.Action("Edit","Feedback",new { id=item.Id })"><i class="fas fa-edit" style='font-size:24px'></i></a>
                <a href="@Url.Action("Details","Feedback",new { id=item.Id })"><i class="fas fa-bars" style='font-size:24px'></i></a>
                <a href="@Url.Action("Delete","Feedback",new { id=item.Id })"><i class="fas fa-trash-alt" style='font-size:24px'></i></a>
            </td>
        </tr>
    }

</table>

<script>
    $('#dataTable').dataTable({
    });
</script>
