@model IEnumerable<Web.OnlineShop.Entity.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
}

<p class=" row">
    <div>
        <a class="btn btn-xs btn-success float-md-right " href="@Url.Action("Create","Contact")">Tạo mới</a>
    </div>
</p>
<table class="table table-striped table-bordered dt-responsive nowrap">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneSecond)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneSecond)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="@Url.Action("Edit","Contact",new { id=item.Id })"><i class="fas fa-edit" style='font-size:24px'></i></a>
                <a href="@Url.Action("Details","Contact",new { id=item.Id })"><i class="fas fa-bars" style='font-size:24px'></i></a>
                <a href="@Url.Action("Delete","Contact",new { id=item.Id })"><i class="fas fa-trash-alt" style='font-size:24px'></i></a>
            </td>
        </tr>
    }

</table>
