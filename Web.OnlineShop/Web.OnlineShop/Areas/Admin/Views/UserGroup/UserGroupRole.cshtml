@model IEnumerable<Web.OnlineShop.Entity.Permission>

@{
    ViewBag.Title = "UserGroupRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Phân quyền người dùng
    }

<table class="table">
    <tr>
        <th>
           <p>Nhóm người dùng</p>
        </th>
        <th>
            Quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.UserGroup.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role.Name)
    </td>
    <td>
        <a href="@Url.Action("EditRole","UserGroup",new { groupId = item.UserGroupId })"><i class="fas fa-edit" style='font-size:24px'></i></a>
    </td>
</tr>
}

</table>
