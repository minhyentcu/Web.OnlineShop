@model IEnumerable<Web.OnlineShop.Entity.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh mục bài viết
}

<p class=" row">
    <div>
        <a class="btn btn-xs btn-success float-md-right " href="@Url.Action("Create","Content")">Tạo mới</a>
    </div>
</p>
<table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
    <thead>
        <tr>
            <th>
                <p>Danh mục bài viết</p>
            </th>
            <th>
                <p>Tên bài viết</p>
            </th>
            <th>
                <p>Hình ảnh</p>
            </th>
            <th>
                <p>Trạng thái</p>
            </th>
            <th>
                <p>Lượt xem</p>
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img alt="image" src="@Url.Content(item.Image)" class="rounded-circle " width="55" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                <a href="@Url.Action("Edit","Content",new { id=item.Id })"><i class="fas fa-edit" style='font-size:24px'></i></a>
                <a href="@Url.Action("Details","Content",new { id=item.Id })"><i class="fas fa-bars" style='font-size:24px'></i></a>
                <a href="@Url.Action("Delete","Content",new { id=item.Id })"><i class="fas fa-trash-alt" style='font-size:24px'></i></a>
            </td>
        </tr>
    }
</table>
<script>
    $('#dataTable').dataTable({
    });
</script>
