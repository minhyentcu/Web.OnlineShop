@model IEnumerable<Web.OnlineShop.Entity.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
}

<p class=" row">
    <div>
        <a class="btn btn-xs btn-success float-md-right " href="@Url.Action("Create","About")">Tạo mới</a>
    </div>
</p>
<table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
    <tr>
        <th>
            <p>Tên bài viết</p>
        </th>
        <th>
            <p>Hình ảnh</p>
        </th>

        <th>
            <p>Trạng thái</p>
        </th>
        <th>
            <p>Ngày tạo</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img alt="image" src="@Url.Content(item.Image)" class="rounded-circle " width="55" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a href="@Url.Action("Edit","About",new { id=item.Id })"><i class="fas fa-edit" style='font-size:24px'></i></a>
                <a href="@Url.Action("Details","About",new { id=item.Id })"><i class="fas fa-bars" style='font-size:24px'></i></a>
                <a href="@Url.Action("Delete","About",new { id=item.Id })"><i class="fas fa-trash-alt" style='font-size:24px'></i></a>
            </td>
        </tr>
    }

</table>
<script>
    $('#dataTable').dataTable({
    });
</script>
