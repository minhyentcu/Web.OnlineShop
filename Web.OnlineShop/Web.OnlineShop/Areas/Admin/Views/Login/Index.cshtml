@model Web.OnlineShop.Areas.Admin.Data.LoginModel
@{ Layout = null;}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Assets/Admin/vendor/bootstrap/css/bootstrap.min.css">
    <link href="/Assets/Admin/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/Assets/Admin/libs/css/style.css">
    <link rel="stylesheet" href="/Assets/Admin/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="../index.html"><img class="logo-img" src="/assets/admin/images/logo.png" alt="logo"></a><span class="splash-description">Please enter your user information.</span></div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {@Html.ValidationSummary(false, "",new { @class = "text-danger" })
                                @Html.AntiForgeryToken()
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-lg", @autofocus = "autofocus" ,@placeholder="Tên đăng nhập" })

                                                </div>
                                                                <div class="form-group">
                                                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg",@type="password", @placeholder = "Mật khẩu" })
                                                                </div>
                                                                                <div class="form-group">
                                                                                    <label class="custom-control custom-checkbox">
                                                                                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "custom-control-input" })
                                                                                        <span class="custom-control-label">Ghi nhớ</span>
                                                                                    </label>
                                                                                </div>
                                                                                                <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng nhập</button>}
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/dang-ky" class="footer-link">Tạo tài khoản</a>
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/quen-mat-khau" class="footer-link">Quên mật khẩu?</a>
                </div>
            </div>
        </div>
    </div>

    
</body>

</html>
