@model Web.OnlineShop.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thông tin sản phẩm
}

<h3>Bạn có muốn xóa sản phẩm?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="">Tên sản phẩm</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>
        <dt>
            <label class="">Danh mục sản phẩm</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-xs btn-primary " href="@Url.Action("Index","Product")">Trở lại</a>
        </div>
    }
</div>
